package org.firstinspires.ftc.teamcode.teamcode.subsystems;

import com.qualcomm.robotcore.eventloop.opmode.OpMode;
import com.qualcomm.robotcore.eventloop.opmode.TeleOp;


@TeleOp(name="Main")
public class Main extends OpMode {
    private Chassis chassis;
    private Launcher launcher;

    private SideLauncher sideLauncher;


    @Override
    public void init() {
        chassis = new Chassis(hardwareMap);
        launcher = new Launcher(hardwareMap);
        sideLauncher = new SideLauncher(hardwareMap);
    }



    @Override
    public void loop() {
        chassis.runMacanumWheels(gamepad1.left_stick_x, gamepad1.left_stick_y, gamepad1.right_stick_x);
        if (gamepad1.a) {
            launcher.setLaunchPower(1);
            sideLauncher.setSideLaunchPower(1);

        } else if (gamepad1.b) {
            launcher.setLaunchPower(1);
            sideLauncher.setSideLaunchPower(0);

        } else {
            launcher.setLaunchPower(0);
            sideLauncher.setSideLaunchPower(0);

        }

    }

}

